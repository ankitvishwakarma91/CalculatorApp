<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/resultShow_textView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:padding="10dp"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="end|bottom"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac_button"
            android:onClick="clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:backgroundTint="@color/extra"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="AC"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/plusMinus_button"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/extra"
            android:text="+/-"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/modulo_button"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            tools:ignore="UsingOnClickInXml"
            android:backgroundTint="@color/extra"
            android:text="%"/>
        <Button
            android:id="@+id/division_button"
            android:onClick="onOperator"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/operator"
            tools:ignore="UsingOnClickInXml"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="7"/>

        <Button
            android:id="@+id/eight_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="8"/>
        <Button
            android:id="@+id/nine_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="9"/>
        <Button
            android:id="@+id/multiply_button"
            android:onClick="onOperator"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/operator"
            android:text="*"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="4"/>

        <Button
            android:id="@+id/five_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="5"/>
        <Button
            android:id="@+id/six_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="6"/>
        <Button
            android:id="@+id/minus_button"
            android:onClick="onOperator"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/operator"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="1"/>

        <Button
            android:id="@+id/two_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="2"/>
        <Button
            android:id="@+id/three_button"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:backgroundTint="@color/but"
            android:textColor="@color/white"
            android:text="3"/>
        <Button
            android:id="@+id/plus_button"
            android:onClick="onOperator"
            tools:ignore="UsingOnClickInXml"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/operator"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/but"
            android:onClick="onDigit"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/dot_button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/but"
            android:onClick="onDecimalPoint"
            android:text="@string/dotSign"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/equals_button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/operator"
            android:onClick="onEqual"
            android:text="@string/equalSign"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>



</LinearLayout>
